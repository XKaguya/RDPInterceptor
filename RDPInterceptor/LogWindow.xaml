<Window x:Class="RDPInterceptor.LogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Log" Height="340" Width="824">
    <Border Background="#FFF" CornerRadius="10">
        <Grid>
            <RichTextBox x:Name="LogRichTextBox" VerticalScrollBarVisibility="Auto" IsReadOnly="True"
                         Background="White" Style="{StaticResource RichTextBoxBaseStyle}">
            </RichTextBox>
        </Grid>
    </Border>
</Window>